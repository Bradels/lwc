{
    "private": true,
    "name": "@lwc/playground",
    "version": "6.4.1",
    "type": "module",
    "description": "Playground project to experiment with LWC.",
    "scripts": {
        "dev": "rollup -c --watch",
        "build": "rm -rf dist && NODE_ENV=production rollup -c",
        "unbuild": "./unbuild.sh"
    },
    "devDependencies": {
        "@lwc/rollup-plugin": "6.4.1",
        "@rollup/plugin-replace": "^5.0.5",
        "lwc": "6.4.1",
        "recover-source": "^1.0.4",
        "rollup": "^4.12.1",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-serve": "^3.0.0"
    },
    "nx": {
        "targets": {
            "build": {
                "outputs": [
                    "{projectRoot}/dist"
                ]
            }
        }
    }
}
