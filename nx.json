{
    "extends": "nx/presets/npm.json",
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheDirectory": "./.nx-cache",
                "cacheableOperations": ["prepare", "build", "dev", "test"]
            }
        }
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"]
        },
        "dev": {
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["^build"]
        },
        "sauce": {
            "dependsOn": ["^build"]
        }
    },
    "affected": {
        "defaultBase": "master"
    }
}
